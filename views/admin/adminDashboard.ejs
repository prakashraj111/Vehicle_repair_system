<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="min-h-screen flex flex-col">
        <!-- Navbar -->
        <header class="bg-white shadow">
            <div class="container mx-auto flex justify-between items-center py-4 px-6">
                <h1 class="text-xl font-bold text-gray-800">Admin Dashboard</h1>
                <nav>
                    <button class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700">
                        <a href="/logout">Logout</a>
                    </button>
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 container mx-auto p-6">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-lg font-bold text-gray-800 mb-4">Recent Users</h2>
                <table class="w-full border-collapse table-auto text-left">
                    <thead>
                        <tr class="bg-gray-100 text-gray-700">
                            <th class="border px-4 py-2">Name</th>
                            <th class="border px-4 py-2">Email</th>
                            <th class="border px-4 py-2">Role</th>
                            <th class="border px-4 py-2">Action</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% for (let user of allUsers) { %>
                        <tr class="hover:bg-gray-50">
                            <td class="border px-4 py-2"><%= user.username %></td>
                            <td class="border px-4 py-2"><%= user.email %></td>
                            <td class="border px-4 py-2"><%= user.role %></td>
                            <td class="border px-4 py-2">
                                <a href="/users/<%= user._id %>" 
                                   class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-1 px-4 rounded-md">
                                    View Profile
                                </a>
                                <form method="POST" action="/users/<%= user._id %>?_method=DELETE" class="inline-block ml-2">
                                    <button 
                                        class="bg-red-600 hover:bg-red-700 text-white font-semibold py-1 px-4 rounded-md">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white py-4">
            <div class="container mx-auto text-center">
                <p class="text-sm">&copy; 2025 Admin Dashboard. All rights reserved.</p>
            </div>
        </footer>
    </div>
</body>
</html>
